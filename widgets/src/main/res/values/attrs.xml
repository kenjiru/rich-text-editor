<resources>
    <attr name="checked" format="boolean" />
    <attr name="fontType" format="string" />
    <attr name="checkedColor" format="color" />
    <attr name="uncheckedColor" format="color" />
    <attr name="disabledColor" format="color" />

    <declare-styleable name="FormattingToolbar">
        <!--
            When using a standard Android attribute, we have to specify the namespace.
            We specify the standard attribute here, so that we can access it using the same
            AttributeSet in the constructor of our custom component.
        -->
        <attr name="android:textSize" />
        <attr name="fontType" />
        <attr name="checkedColor" />
        <attr name="disabledColor" />
        <attr name="uncheckedColor" />
    </declare-styleable>

    <declare-styleable name="ToolbarWidget">
        <attr name="android:textSize" />
        <attr name="fontType" />
        <attr name="disabledColor" />
    </declare-styleable>

    <declare-styleable name="CheckBox">
        <attr name="checked" />
        <attr name="checkedColor" />
        <attr name="uncheckedColor" />
    </declare-styleable>
</resources>